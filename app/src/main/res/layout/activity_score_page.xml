<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.selfprojects.geonarz.opquiz.ScorePage"
    android:padding="16dp"
    android:background="@color/black"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/remark"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Good Job!"
            android:gravity="center"
            android:textSize="50sp"/>

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="60dp"
                android:src="@drawable/beli"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/bountyFinal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500,000,000"
                android:textSize="45dp"
                android:textColor="@color/black"
                />

        </LinearLayout>
        <ImageView
            android:id="@+id/luffy"
            android:layout_margin="20dp"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/luffyapproves"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Luffy is proud!"
            android:textSize="45dp"
            android:textColor="@color/black"
            android:gravity="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <Button
                android:id="@+id/playAgain"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play Again"
                android:textSize="30dp"
                />
            <Button
                android:id="@+id/mainMenu"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Main Menu"
                android:textSize="30dp"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>